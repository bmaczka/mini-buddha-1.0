<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThreeGoodThings">

    <EditText
        android:id="@+id/thingOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="121dp"
        android:layout_marginEnd="85dp"
        android:ems="10"
        android:hint="Good thing #1"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/thingTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="83dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="86dp"
        android:ems="10"
        android:hint="Good thing #2"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thingOne" />

    <EditText
        android:id="@+id/thingThree"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="87dp"
        android:ems="10"
        android:hint="Good thing #3"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thingTwo" />

    <TextView
        android:id="@+id/goodThingsTitleText"
        android:layout_width="207dp"
        android:layout_height="50dp"
        android:layout_marginStart="163dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="160dp"
        android:text="3 Good Things"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/save_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="139dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="157dp"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thingThree" />

    <Button
        android:id="@+id/guidedMeditationButton"
        android:layout_width="194dp"
        android:layout_height="55dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="5dp"
        android:text="to guided meditation"
        app:layout_constraintEnd_toStartOf="@+id/threeGoodThingsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/save_Button" />

    <Button
        android:id="@+id/threeGoodThingsButton"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:text="to three good things"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guidedMeditationButton"
        app:layout_constraintTop_toBottomOf="@+id/save_Button" />

</android.support.constraint.ConstraintLayout>